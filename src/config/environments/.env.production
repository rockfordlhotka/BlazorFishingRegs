# Blazor Fishing Regulations - Production Environment
# This file contains production environment variables
# DO NOT commit this file with real secrets

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production
BLAZOR_FISHING_ENV=Production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use Azure SQL Database or managed SQL Server
SQL_CONNECTION_STRING=Server=your-prod-server.database.windows.net;Database=FishingRegsDB;Authentication=Active Directory Default;TrustServerCertificate=True;MultipleActiveResultSets=True

# =============================================================================
# REDIS CACHE CONFIGURATION
# =============================================================================
# Use Azure Cache for Redis
REDIS_CONNECTION_STRING=your-redis-cache.redis.cache.windows.net:6380,password=your-redis-key,ssl=True,abortConnect=False

# =============================================================================
# SEQ LOGGING CONFIGURATION
# =============================================================================
# Use external Seq instance or Azure Application Insights
SEQ_SERVER_URL=https://your-seq-instance.com
SEQ_API_KEY=your-seq-api-key

# =============================================================================
# STORAGE CONFIGURATION (AZURE STORAGE)
# =============================================================================
AZURE_STORAGE_CONTAINER_NAME=fishing-regulations
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-storage-key;EndpointSuffix=core.windows.net

# =============================================================================
# AI SERVICES CONFIGURATION (AZURE)
# =============================================================================
USE_MOCK_AI_SERVICES=false

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intel-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your-doc-intel-api-key

# =============================================================================
# APPLICATION SECRETS (USE AZURE KEY VAULT)
# =============================================================================
FISHING_REGS_API_KEY=your-production-api-key
FISHING_REGS_JWT_SECRET=your-production-jwt-secret-minimum-256-bits

# =============================================================================
# SSL CERTIFICATE CONFIGURATION
# =============================================================================
# Use Azure Key Vault or Let's Encrypt certificates
ASPNETCORE_Kestrel__Certificates__Default__Password=your-cert-password

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
ASPNETCORE_ALLOWED_HOSTS=yourdomain.com;*.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com;https://api.yourdomain.com
RATE_LIMIT_REQUESTS_PER_MINUTE=60
MAX_PDF_FILE_SIZE_MB=25
MAX_CONCURRENT_UPLOADS=3

# Security headers
ENABLE_HSTS=true
ENABLE_HTTPS_REDIRECTION=true
ENABLE_CORS_CREDENTIALS=false

# Monitoring and telemetry
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGGING=false
MOCK_DATA_SEED=false

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-app-insights-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/

# Health checks
HEALTH_CHECK_TIMEOUT_SECONDS=30
HEALTH_CHECK_DEGRADED_TIMEOUT_SECONDS=60
